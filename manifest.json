{
  "manifest_version": 3,
  "name": "Comma Formatter",
  "version": "1.0",
  "description": "Format numbers with commas by right-clicking.",
  "permissions": ["contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}

